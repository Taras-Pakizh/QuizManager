@using QuizManager.ModelViews;
@using QuizManager.DBModels;
@{
    ViewBag.Title = "Edit";
}
@model QuizView

<div class="container">

    @using (Html.BeginForm("Edit", "Constructor", FormMethod.Post))
    {
        <br />

        <div class="form-group">
            <h2>Quiz:</h2>
        </div>

        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class="form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Type)
            @Html.EnumDropDownListFor(x => x.Type, new { @class="form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.UserData)
            @Html.EnumDropDownListFor(x => x.UserData, new { @class="form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Highest mark:")
            @Html.TextBoxFor(x => x.Value, new { type = "number", min = "0.01", step = "0.01", @class="form-control" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.TimeLimit)
            @Html.TextBoxFor(x => x.TimeLimit, new { type = "time", @class="form-control" })
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    }

</div>