@using QuizManager.Helpers;
@using QuizManager.DBModels;
@using QuizManager.ModelViews;
@model Quiz

<br />

<div class="container">

    <div class="container">

        @Html.Partial("TableByProperty", new TableView()
        {
            data = new List<Quiz>() { Model },
            PropertyNames = new List<string>()
            {
                "Name", "Type", "TimeLimit", "UserData", "Value"
            },
            HeaderNames = new List<string>()
            {
                "Name", "Type", "Time limit", "Authorization type", "Highest mark"
            }
        })

    </div>

    <div id="submit">

        @using (Html.BeginForm("Test", "Test", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">

                <label for="sub">Do you want to start quiz?</label>
                <input type="submit" id="sub" class="btn btn-default" value="Start Quiz" />
            </div>
        }

    </div>

    <h5>Input description for every type of quiz!!!</h5>

</div>