@using QuizManager.DBModels;
@using QuizManager.ModelViews;
@model FinishView

<ul class="list-group">

    @foreach (var item in Model.SectionAnswers)
    {
        <li class="list-group-item">

            <h4>@item.Section.Name : </h4>

            <ul class="list-group">

                @foreach (var question in item.QuestionIndex_IsInit)
                {
                    <li class="list-group-item form-inline">

                        <strong>@question.Key</strong>

                        @if (question.Value)
                        {
                            <span>Finised</span>
                        }
                        else
                        {
                            <strong>Not Finished</strong>
                        }

                    </li>
                }

            </ul>

        </li>
    }

</ul>

<div class="container">

    @using (Ajax.BeginForm("UndoFinish", null, new AjaxOptions() { UpdateTargetId = "tests" }, new { id = "TestsForm" }))
    {
        <div>

            @Html.HiddenFor(x => x.Quiz.Id)

        </div>

        <div class="form-inline text-center form-group">

            <input type="submit" class="btn btn-default" value="Back" />

            @RenderHelper.ActionWithParameter(Url.Action("SaveAttemp", "Test"), Model.Quiz.Id.ToString(), "Finish", "")

        </div>

    }

</div>
