@helper GroupSubmits(IEnumerable<int> orderNumbers)
{
    <div id="qGroup">

        @foreach (var item in orderNumbers)
        {
            <input name="value" type="submit" value="@item" class="btn btn-default btn-squared-small question choose" />
        }

    </div>
}

@helper QuestionTable(IEnumerable<System.Web.Mvc.SelectListItem> selectList, string name)
{
    <div class="row form-inline myhmargin">

        @foreach (var item in selectList)
        {
            if (item.Selected)
            {
                <input name="@name" type="submit" value="@item.Text" class="btn btn-info btn-squared-small mycolor" />
            }
            else
            {
                <input name="@name" type="submit" value="@item.Text" class="btn btn-default btn-squared-small" />
            }
        }

    </div>
}

@helper CheckBoxSimple(string Name, bool IsChecked, string value)
{
    if (IsChecked)
    {
        <input type="checkbox" name="@Name" value="@value" checked="checked" />
    }
    else
    {
        <input type="checkbox" name="@Name" value="@value" />
    }
}

@helper CheckBoxSimple_Id(string Name, bool IsChecked, string value, string id)
{
    if (IsChecked)
    {
        <input type="checkbox" name="@Name" value="@value" checked="checked" id="@id" />
    }
    else
    {
        <input type="checkbox" name="@Name" value="@value" id="@id" />
    }
}

@helper CheckBoxSimpleDisabled(bool IsChecked)
{
    if (IsChecked)
    {
        <input type="checkbox" checked="checked" disabled />
    }
    else
    {
        <input type="checkbox" disabled />
    }
}

@helper CreateSquere(string QuizName, int Id,
    IEnumerable<string> Names, IEnumerable<string> Links)
{
    <div data-toggle="tooltip" data-placement="right"
         title="@QuizName">
        <button data-toggle="modal" data-target="#@Id"
                class="btn-squared-default-plain:hover btn-squared-default">
            <p class="module">
                @QuizName
            </p>
        </button>

        <div class="modal fade" id="@Id" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><strong>Choose action</strong></h4>
                    </div>
                    <div class="modal-body list-group">
                        @foreach (var item in Names.Zip(Links, (name, link) =>
                                new
                                {
                                    Name = name,
                                    Link = link
                                }
                            ))
                        {
                            var href = item.Link + "?id=" + Id;

                            <a class="list-group-item" href="@href">
                                <h4>@item.Name</h4>
                            </a>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>

}

